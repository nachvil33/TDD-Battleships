{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "plugin:import/errors", "plugin:import/warnings"],
  "plugins": ["import"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/extensions": [1, {
      "js": "always", "json": "always"
    },
    "error",
    " always",
      {
        "js": "always",
        "json": "always"
      },
    ],
  },
  "ignorePatterns": ["dist/", "build/"]
};
